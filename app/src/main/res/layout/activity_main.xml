<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_layout">

    <LinearLayout android:name="com.example.hadad.towme.TowMapFragment"
        android:id="@+id/frag_google_map"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#335533"/>


    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/rank_bt"
            android:text="Rank"
            android:textColor="#0DC6FF"
            android:textSize="15sp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/buttonshape"/>

        <Button
            android:id="@+id/price_bt"
            android:text="Price"
            android:textColor="#0DC6FF"
            android:textSize="15sp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/dist_bt"
            android:text="Distance"
            android:textColor="#0DC6FF"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:layout_centerVertical="true"/>

        <ImageView

            android:src="@drawable/triangle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/arrow_up"
            android:scaleX=".5"
            android:scaleY=".5"
            android:layout_above="@+id/dist_bt"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:src="@drawable/triangle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:rotation="180"
            android:id="@+id/arrow_down"
            android:scaleX=".5"
            android:scaleY=".5"
            android:layout_below="@+id/dist_bt"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout android:name="com.example.hadad.towme.TowListFragment"
        android:id="@+id/frag_list_tow"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#00FF00"/>


</LinearLayout>